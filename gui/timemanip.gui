				icon = {
					size = { 100% 100% }
					alwaystransparent = yes
					ignore_in_debug_draw = yes
					spriteType = Corneredtiled
					spriteborder = { 600 400 }
					texture_density = 2
					texture = "gfx/interface/main_hud/ui_paus_frame.dds"
					
					using = hud_shiny_effect
				}
